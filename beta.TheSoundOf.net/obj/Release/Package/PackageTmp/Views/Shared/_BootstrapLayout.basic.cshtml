@using System.Web.Optimization
@using BootstrapSupport
@using NavigationRoutes
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Styles.Url("~/content/css")" rel="stylesheet" />
    @RenderSection("head", required: false)
    @Html.Partial("_html5shiv")
    @* favicons and touch icons go here *@
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="display:none" >
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                @Html.ActionLink("The Sound of .NET", "Index", "Shows", null, new { @class = "brand" })

                <div class="nav-collapse collapse">
                    <ul class="nav">
                        @*@Html.Navigation()*@
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row-fluid">
            <h1 class="span10 offset2" style="margin-bottom:50px"> @Html.ActionLink(" The Sound of .NET", "Index", "Shows", null, new { style="text-decoration:none" })</h1>
            <br/>
        </div>
            <div class="row-fluid">
                <div class="span2" style="margin-top:20px">
                    Producers
                        @Html.Action("Producers", "Producers")
                    </div>
                    <div class="span10">
                        @Html.Partial("_alerts")
                            @Html.Partial("_validationSummary")
                                @RenderBody()


                                </div>
                            </div>
                            <footer>
                                <hr>
                                <p>&copy; The Sound Of .NET @System.DateTime.Now.ToString("yyyy")</p>
                                </footer>

                            </div>

    <div class="container">
        
    </div>
    @Scripts.Render("~/js")
    @RenderSection("Scripts", required: false)
</body>
</html>
