@model IEnumerable<beta.TheSoundOf.net.Models.Show>
@using PagedList.Mvc
@using PagedList


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @using (Html.BeginForm("Index","Shows", FormMethod.Get))
    {
        @Html.TextBox("searchText",(object)ViewBag.SearchText) @*,ViewBag.SearchText,null);*@
            
            <input type="submit" class="btn" value="Search" style="margin-top:-10px" />
        
    }

</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            Producer
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Title, "Details", new { id = item.Id})
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Producer.Name)
          </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>


@Html.PagedListPager((PagedList.IPagedList)ViewBag.OnePageOfProducts, page => Url.Action("Index", new { page = page, searchText =ViewBag.SearchText }))